<%= simple_form_for([@post, @post.comments.build]) do |f| %>
<div class="field">
    <div class="control">
      <%= f.input :name, input_html: { class: 'input', maxlength: 50 }, wrapper: false, label_html: { class: 'label'},
      label: '名前' %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :remark, input_html: { class: 'textarea', maxlength: 3000 }, wrapper: false, label_html: { class:
      'label'}, label: 'コメント' %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info is-light is-normal is-fullwidth" %>
<% end %>
