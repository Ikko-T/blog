<h1 class="title is-1">New Post</h1>

<div class="section">
  <%= simple_form_for @post do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :title, input_html: { class: 'input', maxlength: 50 }, wrapper: false, label_html: { class: 'label'}, label: 'タイトル' %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= f.input :content, input_html: { class: 'textarea', maxlength: 500 }, wrapper: false, label_html: { class: 'label'}, label: 'コメント' %>
      </div>
    </div>
    <%= f.button :submit, '投稿する', class: "button is-success" %>
  <% end %>
</div>
