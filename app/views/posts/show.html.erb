<% content_for :page_title, @post.title %>

<section class="section">
  <div class="content">
    <%= @post.content %>
  </div>
  <div class="level">
    <div class="level-left">
      <p class="has-text-grey">
        <%= l @post.created_at, format: :short %>
      </p>
    </div>
    <div class="level-right">
      <p class="level-item">
        <%= link_to "編集", edit_post_path(@post), class: "button" %>
      </p>
      <p class="level-item">
        <%= link_to "削除", post_path(@post), method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: "button is-danger" %>
      </p>
    </div>
  </div>
</section>
<hr>
<section class="section comments">
  <div class="container">
    <h2 class="subtitle is -5"><strong><%= @post.comments.count %></strong> 件のコメント</h2>
    <%= render @post.comments %>
    <hr>
    <div class="comment-form">
      <h3 class="subtitle is-3">公開コメントを入力...</h3>
      <%= render 'comments/form' %>
    </div>
  </div>
</section>
